<table>
  <thead>
    <tr>
      <th>時間(Hour)</th>
      <th>活動(Activity)</th>
      <th>渇望度(0~10)(Desire level:0 to 10)</th>
      <th>気分(0~10)(Feeling level:0 to 10))</th>
      <th>考えたこと、気づいたこと(Comments)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.hour %></td>
        <td><%= record.activity %></td>
        <td><%= record.desire_level %></td>
        <td><%= record.feeling_level %></td>
        <td><%= record.comment %></td>
        <td><%= link_to '詳細表示(show)', record %></td>
        <td><%= link_to '編集(edit)', edit_record_path(record) %></td>
        <td><%= link_to '削除(delete)', record, method: :delete, data: { confirm: '本当に削除しますか?(Are you sure?)' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

