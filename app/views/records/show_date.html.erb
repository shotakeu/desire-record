<h1>飲酒渇望記録</h1>
<p id="notice"><%= notice %></p>
<%= month_calendar(attribute: :date) do |date| %>
  <%= link_to date, controller: "records", action: "show_date", date: date %>
<% end %>
<table>
  <thead>
    <tr>
      <th>時間</th>
      <th>活動</th>
      <th>渇望度(0~10)</th>
      <th>気分(0~10)</th>
      <th>考えたこと、気づいたこと</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.hour %></td>
        <td><%= record.activity %></td>
        <td><%= record.desire_level %></td>
        <td><%= record.feeling_level %></td>
        <td><%= record.comment %></td>
        <td><%= link_to '詳細表示', record %></td>
        <td><%= link_to '編集', edit_record_path(record) %></td>
        <td><%= link_to '削除', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規入力', new_record_path %>
